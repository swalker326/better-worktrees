{
  "name": "better-worktrees",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "bun run --filter better-worktree-cli dev",
    "start": "bun run --filter better-worktree-cli start",
    "test": "bun run --filter better-worktree-cli test",
    "typecheck": "bun run --filter better-worktree-cli typecheck && bun run --filter better-worktree-docs typecheck",
    "docs:dev": "bun run --filter better-worktree-docs dev",
    "docs:build": "bun run --filter better-worktree-docs build",
    "docs:preview": "bun run --filter better-worktree-docs preview"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5"
  }
}
